<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<h1 style="text-align: center;">Edit <%= photo.name%></h1>
			<div style="width: 30%; margin: 30px auto;">
				<form action="/galleries/<%=photo._id%>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="photo[name]" value="<%= photo.name%>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="photo[image]" value="<%= photo.image%>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="photo[description]" value="<%= photo.description%>">
					</div>
					<div class="form-group">
						<button class="btn btn-primary btn-lg btn-default btn-block">Submit!</button>
					</div>
				</form>
				<a href="/galleries">Go Back!!!</a>
			</div>
		</div>
	</div>

	<% include ../partials/footer %>